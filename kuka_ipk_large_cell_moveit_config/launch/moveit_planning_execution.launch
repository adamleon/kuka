<?xml version="1.0"?>
<launch>
  <!-- The planning and execution components of MoveIt! configured to run -->
  <!-- using the ROS-Industrial interface. -->  
 
  <!-- By default, start the rviz moveit plugin -->
  <arg name="rviz" default="true" />

  <!-- By default, do not start a database (it can be large) -->
  <arg name="db" default="false" doc="Start the MoveIt database" />
  <!-- Allow user to specify database location -->
  <arg name="db_path" default="$(find kuka_ipk_large_cell_moveit_config)/default_warehouse_mongo_db" doc="Path to database files" />

  <!-- Non-standard joint names -->
  <rosparam command="load" file="$(find kuka_kr16_support)/config/joint_names_kr16.yaml"/>
  <rosparam command="load" file="$(find kuka_kr120_support)/config/joint_names_kr120r2500pro.yaml"/>

  <!-- load the robot_description parameter before launching ROS-I nodes -->
  <include file="$(find kuka_ipk_large_cell_moveit_config)/launch/planning_context.launch" >
    <arg name="load_robot_description" value="true" />
  </include>

  <!-- publish the robot state (tf transforms) -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
     <param name="/use_gui" value="false"/>
     <rosparam param="/source_list">[/kr16/joint_states,/qu1/joint_states,/qu2/joint_states]</rosparam>
  </node>

  <include file="$(find kuka_ipk_large_cell_moveit_config)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true" />
  </include>

  <include file="$(find kuka_ipk_large_cell_moveit_config)/launch/moveit_rviz.launch" if="$(arg rviz)">
    <arg name="config" value="true"/>
  </include>

  <include file="$(find kuka_ipk_large_cell_moveit_config)/launch/default_warehouse_db.launch" if="$(arg db)">
    <arg name="moveit_warehouse_database_path" value="$(arg db_path)"/>
  </include>

</launch>
